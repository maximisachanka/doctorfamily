generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Service {
  id             Int                   @id @default(autoincrement()) @map("service_id")
  title          String
  subtitle       String
  price          Int
  video_url      String
  description    String                @db.Text
  image_url      String
  image_url_1    String
  image_url_2    String
  image_url_3    String
  image_url_4    String?
  questions_id   Int
  reviews_id     Int
  category_id    Int

  // Отношения
  category       Category              @relation(fields: [category_id], references: [id])
  specialists    ServiceSpecialist[]   // M:N со специалистами
  questions      Question[]            // 1:M с вопросами
  feedbacks      Feedback[]            // 1:M с отзывами

  @@map("services")
  @@index([category_id])
}

// Таблица связей many-to-many между услугами и специалистами
model ServiceSpecialist {
  service_id     Int
  specialist_id  Int

  service        Service    @relation(fields: [service_id], references: [id], onDelete: Cascade)
  specialist     Specialist @relation(fields: [specialist_id], references: [id], onDelete: Cascade)

  @@id([service_id, specialist_id])
  @@map("service_specialists")
}

model Category {
  id          Int          @id @default(autoincrement()) @map("category_id")
  name        String
  slug        String       @unique
  services    Service[]
  specialists Specialist[]
  partners    Partner[]

  @@map("categories")
  @@index([slug])
}

model Specialist {
  id                 Int        @id @default(autoincrement()) @map("specialists_id")
  category_id        Int        @map("categori_id")
  name               String
  specialization     String
  qualification      String
  experience         Int
  grade              Int
  image_url          String
  activity_area      String?
  education_details  String?   @db.Text
  conferences        String[]   @default([])
  // Поля для структуры about
  specializations    String[]   @default([])
  education          String[]   @default([])
  work_examples      Json?      // Для хранения массива { title: string; images: string[] }[]

  // relations
  category           Category             @relation(fields: [category_id], references: [id])
  services           ServiceSpecialist[]  // M:N с услугами

  @@map("specialists")
  @@index([category_id])
}

model Question {
  id              Int          @id @default(autoincrement()) @map("questions_id")
  question        String
  answer          String?      @db.Text
  category        String?      // Категория FAQ (slug из захардкоженного списка)
  service_id      Int?         // Необязательный - для привязки к услуге

  service         Service?     @relation(fields: [service_id], references: [id])

  @@map("questions")
  @@index([service_id])
  @@index([category])
}

model Feedback {
  id         Int      @id @default(autoincrement()) @map("reviews_id")
  name       String
  text       String   @db.Text
  date       DateTime @db.Date
  grade      Int
  image_url  String
  verified   Boolean  @default(false) // Для общих отзывов клиники
  service_id Int?     // Теперь необязательный - для общих отзывов клиники
  service    Service? @relation(fields: [service_id], references: [id])

  @@map("feedbacks")
  @@index([service_id])
}

model Partner {
  id           Int       @id @default(autoincrement()) @map("partners_id")
  category_id  Int       @map("categori_id")
  image_url    String
  name         String
  description  String    @db.Text
  number       Int
  website_url  String

  category     Category  @relation(fields: [category_id], references: [id])

  @@map("partners")
  @@index([category_id])
}

model Vacancy {
  id           Int     @id @default(autoincrement()) @map("vacancies_id")
  name         String
  category     String
  description  String
  payment      Int
  experience   Int
  requirements String

  @@map("vacancies")
}

model Contacts {
  id                 Int    @id @default(autoincrement()) @map("contact_id")
  address            String
  map_geo            String
  work_hours_main    String
  work_hours_sunday  String
  phone_number       String
  phone_number_sec   String?
  email              String

  @@map("contacts")
}

enum Role {
  USER
  ADMIN
  CHIEF_DOCTOR
}

model Patient {
  id                   Int      @id @default(autoincrement()) @map("patient_id")
  login                String
  email                String   @unique
  password             String
  name                 String
  phone                String   @unique
  registration_date    DateTime @db.Date
  avatar_url           String?  // URL аватарки пользователя (опционально)
  role                 Role     @default(USER)
  is_messages_blocked  Boolean  @default(false) // Заблокирован ли пользователь от отправки писем

  letters              Letter[] // Письма главному врачу

  @@map("patients")
}

model Material {
  id               Int      @id @default(autoincrement()) @map("material_id")
  title            String
  content          String   @db.Text
  detailed_content String?  @db.Text // Подробное описание для модального окна
  image_url        String
  date             DateTime @db.Date
  year             Int
  is_active        Boolean  @default(true)
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt

  @@map("materials")
  @@index([year])
  @@index([is_active])
}

// Письма главному врачу
model Letter {
  id             Int             @id @default(autoincrement()) @map("letter_id")
  patient_id     Int
  subject        String
  content        String          @db.Text
  created_at     DateTime        @default(now())
  reply          String?         @db.Text  // Ответ главного врача (первый ответ для обратной совместимости)
  replied_at     DateTime?                 // Дата ответа
  is_read        Boolean         @default(false)  // Прочитано главным врачом
  is_reply_read  Boolean         @default(false)  // Ответ прочитан пациентом
  has_new_patient_message  Boolean @default(false) // Есть новое сообщение от пациента

  patient        Patient         @relation(fields: [patient_id], references: [id], onDelete: Cascade)
  messages       LetterMessage[] // Сообщения в переписке

  @@map("letters")
  @@index([patient_id])
  @@index([is_read])
  @@index([is_reply_read])
  @@index([has_new_patient_message])
}

// Сообщения в переписке письма
model LetterMessage {
  id             Int       @id @default(autoincrement()) @map("message_id")
  letter_id      Int
  sender_type    String    // 'patient' или 'chief_doctor'
  content        String    @db.Text
  created_at     DateTime  @default(now())
  is_read        Boolean   @default(false)

  letter         Letter    @relation(fields: [letter_id], references: [id], onDelete: Cascade)

  @@map("letter_messages")
  @@index([letter_id])
  @@index([is_read])
}
